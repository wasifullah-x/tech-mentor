# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
ENVIRONMENT=development

# LLM API Keys (Choose one or multiple)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
DEFAULT_LLM_PROVIDER=openai  # Options: openai, anthropic, local
DEFAULT_MODEL=gpt-3.5-turbo  # or claude-3-sonnet-20240229
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector Database
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=it_support_kb

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=4000

# Safety Settings
ENABLE_SAFETY_CHECKS=True
REQUIRE_CONFIRMATION_FOR_RISKY_ACTIONS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
